@model Comment

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmReply" }))
{

    <div class="modal-header">
        <h4 class="modal-title">Add Reply</h4>
        <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
    </div>
    <div class="modal-body">

        @Html.HiddenFor(m => m.ID)

        <div class="form-group">
            @Html.LabelFor(m => m.CommentText, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CommentText, new { @class = "form-control" })
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </div>


}